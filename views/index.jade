extends layout

block content
  h1= title
  p Witaj!

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 Informacje
      p
        strong Nazwa uzytkownika:
        |  <span id='userInfoName'></span>
        br
        strong Wiek:
        |  <span id='userInfoAge'></span>
        br
        strong Plec:
        |  <span id='userInfoGender'></span>
        br
        strong Lokalizacja:
        |  <span id='userInfoLocation'></span>
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
      table
        thead
          th Nazwa uzytkownika
          th Email
          th Kasacja
        tbody
    // /USER LIST

    // ADD USER
    h2 Dodaj uzytkownika
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Nazwa uzytkownika')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Pelne imie')
        input#inputUserAge(type='text', placeholder='Wiek')
        br
        input#inputUserLocation(type='text', placeholder='Lokalizacja')
        input#inputUserGender(type='text', placeholder='Plec')
        br
        button#btnAddUser Dodaj
    // /ADD USER

  // /WRAPPER